{% extends 'KassnerFinancesBundle::layout.html.twig' %}

{% block body -%}
<br />
<div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Top categories
                {{ form_start(filter, {'attr': {'class': 'pull-right'}}) }}
                {{ form_widget(filter.type) }}
                {{ form_widget(filter.period) }}
                {{ form_end(filter) }}
            </div>
            <div class="panel-body">
                <ul class="nav-pills nav nav-stacked">
                    {% for category in categories %}
                    <li><a href="#">{{ category.name }} <span class="pull-right amount">{{ category.balance|price }}</span></a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        {# @TODO next scheduled transactions #}
    </div>
</div>
{% endblock %}